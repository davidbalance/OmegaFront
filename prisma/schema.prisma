generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Session {
  id      Int    @id @default(autoincrement()) @map("session_id")
  session String @unique @default(uuid()) @map("session") @db.VarChar(64)
  access  String @map("session_access") @db.VarChar(1024)
  refresh String @map("session_refresh") @db.VarChar(1024)

  @@index(map: "idx_session", fields: [session])
  @@map("tbl_session")
}
